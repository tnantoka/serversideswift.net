{{< layout }}
  {{$ content }}
    {{# posts }}
      <div class="post-preview">
        <a href="/posts/{{ id }}">
          <h2 class="post-title">{{ title }}</h2>
          <!--h3 class="post-subtitle">{{ body }}</h3-->
        </a>
        <p class="post-meta">Posted by <a href="https://twitter.com/tnantoka">tnantoka</a> on {{ date }}</p>
      </div>
      <hr>
    {{/ posts }}

    <ul class="pager">
      <li class="next">
        <a href="#">Older Posts &rarr;</a>
      </li>
    </ul>
  {{/ content }}
{{/ layout }}
